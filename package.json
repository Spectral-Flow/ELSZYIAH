{
  "name": "elysia-concierge",
  "version": "1.0.0",
  "description": "AI-powered concierge system for The Avant luxury apartments - Kairoi Residential",
  "keywords": [
    "property-management",
    "concierge",
    "apartment-living",
    "ai-assistant",
    "resident-services",
    "the-avant",
    "kairoi-residential"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Spectral-Flow/ELSZYIAH.git"
  },
  "scripts": {
    "setup": "make install",
    "setup:dev": "make install-dev",
    "setup:full": "make install-full",
    
    "dev": "make dev",
    "dev:llamacpp": "make dev-llamacpp",
    "dev:bloom": "make dev-bloom",
    "dev:hosted": "make dev-hosted",
    "dev:docker": "docker-compose up --build elysia-api",
    "dev:full": "docker-compose --profile frontend --profile admin up --build",
    
    "test": "make test",
    "test:cov": "make test-cov",
    "test:watch": "make test-watch",
    "test:integration": "make test-integration",
    
    "lint": "make lint",
    "format": "make format",
    "format:check": "make format-check",
    "quality": "make pre-commit",
    
    "health": "make health",
    "status": "make status", 
    "logs": "make logs",
    "demo": "make demo",
    
    "clean": "make clean",
    "clean:all": "make clean-all",
    
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f elysia-api",
    "docker:build": "docker-compose build",
    
    "docs": "make docs",
    "docs:api": "echo 'API Documentation: http://localhost:8000/docs'",
    
    "security": "make security",
    "requirements": "make requirements"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0",
    "python": ">=3.9.0"
  },
  "private": true,
  "workspaces": [
    "frontend",
    "mobile"
  ],
  "author": "Kairoi Residential Technology Team",
  "license": "PROPRIETARY - Kairoi Residential Internal Use Only",
  "config": {
    "property": {
      "name": "The Avant",
      "location": "Centennial, Colorado",
      "management_company": "Kairoi Residential",
      "units": 280,
      "launch_date": "2025-12-01"
    },
    "elysia": {
      "personality": "Professional luxury concierge",
      "response_time_target": "< 2 seconds",
      "availability": "24/7",
      "languages": ["en-US"],
      "voice_enabled": true
    }
  }
}
