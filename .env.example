# Elysia Concierge Environment Configuration
# Copy this to .env and customize for your environment

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="Elysia Concierge"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================================================
# Property Information - The Avant, Centennial CO
# =============================================================================
PROPERTY_NAME="The Avant"
PROPERTY_LOCATION="Centennial, Colorado"
PROPERTY_UNITS=280
MANAGEMENT_COMPANY="Kairoi Residential"

# =============================================================================
# API Configuration
# =============================================================================
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,https://localhost:3000"

# =============================================================================
# Security & Authentication
# =============================================================================
SECRET_KEY="your-super-secret-key-change-this-immediately"
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM="HS256"

# =============================================================================
# AI Model Configuration
# =============================================================================
# Primary AI Engine Selection
ELYSIA_USE_LLAMACPP=false
ELYSIA_USE_BLOOM=false
ELYSIA_USE_HOSTED=false
ELYSIA_USE_AZURE_OPENAI=false
ELYSIA_USE_OPENAI=false

# llama-cpp-python Configuration (GGUF Models)
ELYSIA_LLAMACPP_REPO_ID="HagalazAI/Elysia-Trismegistus-Mistral-7B-v02-GGUF"
ELYSIA_LLAMACPP_FILENAME="Elysia-Trismegistus-Mistral-7B-v02-IQ3_M.gguf"
LLAMACPP_N_CTX=4096
LLAMACPP_N_THREADS=4
LLAMACPP_N_GPU_LAYERS=0

# Local BLOOM Model Configuration
ELYSIA_BLOOM_MODEL="bigscience/bloom-560m"

# Hosted Inference Configuration
ELYSIA_HF_API_KEY=""  # Your Hugging Face API key
ELYSIA_HF_MODEL="bigscience/bloom-560m"

# Azure OpenAI Configuration (Production Recommended)
AZURE_OPENAI_ENDPOINT=""  # https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=""   # Your Azure OpenAI API key
AZURE_OPENAI_DEPLOYMENT_NAME=""  # Your deployment name
AZURE_OPENAI_API_VERSION="2023-12-01-preview"

# OpenAI Configuration (Alternative)
OPENAI_API_KEY=""  # Your OpenAI API key
OPENAI_MODEL="gpt-3.5-turbo"

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL="postgresql://elysia:secure_password@localhost:5432/elysia_concierge"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
REDIS_DB=0

# =============================================================================
# External Integrations
# =============================================================================
# Property Management System
PROPERTY_MANAGEMENT_API_URL=""
PROPERTY_MANAGEMENT_API_KEY=""
PROPERTY_MANAGEMENT_TIMEOUT=30

# =============================================================================
# Notification Services
# =============================================================================
# SendGrid Email
SENDGRID_API_KEY=""
SENDGRID_FROM_EMAIL="noreply@theavant.com"
SENDGRID_FROM_NAME="The Avant Concierge"

# Twilio SMS
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_FROM_PHONE=""

# =============================================================================
# Monitoring & Analytics
# =============================================================================
# Sentry Error Tracking
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# Prometheus Metrics
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Application Insights (Azure)
APPINSIGHTS_INSTRUMENTATIONKEY=""

# =============================================================================
# File Storage & Media
# =============================================================================
# Local Storage
MEDIA_ROOT="/home/runner/work/ELSZYIAH/ELSZYIAH/media"
STATIC_ROOT="/home/runner/work/ELSZYIAH/ELSZYIAH/static"

# AWS S3 (Production)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_STORAGE_BUCKET_NAME=""
AWS_S3_REGION_NAME="us-west-2"

# Azure Blob Storage (Alternative)
AZURE_ACCOUNT_NAME=""
AZURE_ACCOUNT_KEY=""
AZURE_CONTAINER=""

# =============================================================================
# Development Tools
# =============================================================================
# Hot Reload
RELOAD=true
RELOAD_DIRS="backend,frontend"

# Testing
TEST_DATABASE_URL="postgresql://elysia_test:test_password@localhost:5432/elysia_test"

# Performance
WORKER_TIMEOUT=120
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# =============================================================================
# Deployment Configuration
# =============================================================================
# Vercel
VERCEL_TOKEN=""  # For automated deployments

# Docker
DOCKER_REGISTRY=""
DOCKER_IMAGE_TAG="latest"

# Health Checks
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_RETRIES=3

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_VOICE_COMMANDS=true
FEATURE_AMENITY_BOOKING=true
FEATURE_GUEST_ACCESS=true
FEATURE_COMMUNITY_EVENTS=true
FEATURE_MAINTENANCE_TRACKING=true
FEATURE_ANALYTICS_DASHBOARD=false